@model IEnumerable<E_commercesite.Models.Food>



@{
    ViewData["Title"] = "Home Page";
}

<style>
    .title {
        font-size: 20px;
        font-family: 'Times New Roman';
        color: red;
        margin-left: 15px;
    }

    .p {
        color: darkred;
        font-family: 'Lucida Sans';
        font-size: 38px;
        text-align: center;
        height: 280px;
    }
     .p1 {
        color: darkred;
        font-family: 'Lucida Sans';
        font-size: 38px;
        text-align: center;
    }

    .nav ul {
        background-color: #444;
        list-style: none;
        padding: 0;
        margin: 0;
        text-align: center;
    }

    .nav li {
        color: white;
        font-family: 'Lucida Sans';
        line-height: 40px;
        height: 40px;
        font-size: 18px;
        display: inline-block;
        width: 200px;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: lightgrey;
        width: 100%;
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            display: block;
        }

    .dropdown:hover .dropdown-content {
        display: block;
    }
</style>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="http://cdn.shopify.com/s/files/1/0065/4917/6438/products/outside-a-large-supermarket-background_e76367d9-3ca9-423e-a985-a834ad94c52a_1200x1200.jpg?v=1549231050" style="height:350px; width:100%" />
            <div class="carousel-caption" role="option">
                <p class="p">
                    Welcome to our website, hope you will enjoy it!
                </p>

            </div>
        </div>
        <div class="item">
            <img src="https://static.timesofisrael.com/www/uploads/2018/04/hungarian.jpg" style="height:350px; width:100%" />
            <div class="carousel-caption" role="option">
                <p class="p">
                    Come to us, we have everything that you and your family need!
                </p>

            </div>
        </div>
        <div class="item">
            <img src="https://upload.wikimedia.org/wikipedia/commons/1/13/Supermarkt.jpg" style="height:350px; width:100%" />
            <div class="carousel-caption" role="option">
                <p class="p">
                    Our fruit is always fresh!

                </p>

            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<br /><br />
<p class="p1">Some of the products that we have for you: </p>
<br /><br />



<div class="row">

    <div class="row">


        @foreach (var item in Model)
        {
            <div class="col-sm-4" style="margin-bottom:60px; text-align:center;">
                <img src="data:image/jpg;base64,@item.ImageString" style="width:100px; height:100px" />
                <p>@item.Name</p>

            </div>
        }
    </div>
</div>
