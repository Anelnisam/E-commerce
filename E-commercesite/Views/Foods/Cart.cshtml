@model IEnumerable<E_commercesite.Models.Food>

@{
    ViewData["Title"] = "Cart";
}

<h2>Your Cart</h2>

<div style="height:500px;">
    <div class="col-sm-6" style="float:left">

        @foreach (var item in Model)
        {
            <div style="margin-bottom:20px;">

                <img src="data:image/jpg;base64,@item.ImageString" style="width:100px; height:100px" />
                <p>@item.Name</p>
                <p>$ @item.Price</p>
            </div>
        }
    </div>
    <div>
        <a asp-action="PurchaseOrder" asp-controller="foods" class="btn btn-default">Purchase Order</a>
    </div>
</div>

